<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%style{%d{dd/MM/yy HH:mm:ss}}{yellow} | %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} | wii_cms_service | %replace{%mdc{userId}}{^$}{00000000-0000-0000-0000-000000000000} | %replace{%mdc{traceId}}{^$}{empty} | %replace{%mdc{spanId}}{^$}{empty} | %replace{%mdc{duration}}{^$}{0} | %style{%F}{blue}: %m%n"/>
    </Console>
    <Socket name="Remote" host="${env:LOG_IP}" port="${env:LOG_PORT}" protocol="UDP">
      <PatternLayout
              pattern="%d{dd/MM/yy HH:mm:ss} | %level | wii_cms_service | %replace{%mdc{userId}}{^$}{00000000-0000-0000-0000-000000000000} | %replace{%mdc{traceId}}{^$}{empty} | %replace{%mdc{spanId}}{^$}{empty} | %replace{%mdc{duration}}{^$}{0} | %F: %m"/>
    </Socket>
  </Appenders>
  <Loggers>
    <Logger name="com.wiinvent.gami" level="${env:LOG_LEVEL}" includeLocation="true"/>
    <Logger name="org.springframework.web" level="${env:LOG_LEVEL}" includeLocation="true"/>
    <Root level="warn" includeLocation="true">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="Remote"/>
    </Root>
  </Loggers>

</Configuration>
